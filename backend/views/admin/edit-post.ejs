<% include ../_layouts/admin_header %>
<div class="mdk-drawer-layout js-mdk-drawer-layout" data-fullbleed data-push data-responsive-width="992px" data-has-scrolling-region>

        <div class="mdk-drawer-layout__content">
          <div class="mdk-header js-mdk-header bg-primary  data-fixed">
                    <div class="mdk-header__content">

                        <nav class="navbar navbar-expand-md bg-primary navbar-dark d-flex-none">
                            <button class="btn btn-link text-white pl-0" type="button" data-toggle="sidebar">
                              <i class="material-icons align-middle md-36">short_text</i>
                            </button>
                            <div class="page-title m-0">Dashboard</div>

                            <div class="collapse navbar-collapse" id="mainNavbar">
                                <ul class="navbar-nav ml-auto align-items-center">

                                    <li class="nav-item nav-divider">
                                        <li class="nav-item">
                                            <a href="#" class="nav-link dropdown-toggle dropdown-clear-caret" data-toggle="sidebar" data-target="#user-drawer">
                                              <%= user.name %>
                                              <img src="https://pbs.twimg.com/profile_images/928893978266697728/3enwe0fO_400x400.jpg" class="img-fluid rounded-circle ml-1" width="35"
                                                alt="">
                                            </a>
                                        </li>
                                </ul>
                            </div>
                        </nav>
                    </div>
                </div>


            <!-- header-layout -->
               <div class="mdk-header-layout__content mdk-header-layout__content--scrollable h-100">

                

               
    <div class="container-fluid">
      <%- messages('messages', locals) %>
      <% if(errors) { %>
        <% errors.forEach(function(error){ %>
        <div class="alert alert-danger">
          <%= error.msg %>
        </div>
        <% }); %>
      <% } %>
      <h2>Edit Post</h2>
      <div class="card">
        <div class="card-body">
          <form id="new_blog_post" action="/admin/edit-post/<%= post._id %>" method="post" enctype="multipart/form-data">
            <div class="form-group">
              <label for="post-title">Title</label>
              <input type="text" class="form-control" id="post-title" name="post_title" placeholder="Enter Post Title" value="<%= post.post_title %>">
            </div>

            <div class="form-group">
              <label for="post-slug">Slug</label>
              <input type="text" class="form-control" id="post-slug" name="post_name" placeholder="Enter Slug" value="<%= post.post_name %>">
            </div>
            
            <div class="form-group">
              <label for="post-content">Post Content</label>
              <textarea id="post-content" name="post_content"><%= post.post_content %></textarea>
            </div>

            <div class="form-group">
              <label for="featuredimage">Featured Image</label>
              <input type="file" class="form-control-file" id="featuredimage" name="featuredimage" />
              <input type="hidden" class="form-control-file" id="pimage" name="pimage" value="<%= post.featured_image %>" />
              <br>
              <img id="image_preview" src="/admin_uploads/<%= post.featured_image %>" alt="your image"  style="width: 100px; height: 100px;"/>
            </div>

            <div class="form-group">
              <button class="btn btn-primary">Publish</button>
            </div>
          </form>
          </div>
      </div>
    </div>
   </div>


        </div>
        <!-- // END drawer-layout__content -->

        <!-- sidebar -->
        <% include ../_layouts/admin_sidebar %>
        <!-- // END sidebar -->

        <!-- drawer -->
       <% include ../_layouts/admin_right_drawer %>
        <!-- // END drawer -->

    </div>
    <!-- // END drawer-layout -->
<% include ../_layouts/admin_footer %>