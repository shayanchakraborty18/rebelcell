<% include ../_layouts/admin_header %>
<div class="mdk-drawer-layout js-mdk-drawer-layout" data-fullbleed data-push data-responsive-width="992px" data-has-scrolling-region>

        <div class="mdk-drawer-layout__content">
          <div class="mdk-header js-mdk-header bg-primary  data-fixed">
                    <div class="mdk-header__content">

                        <nav class="navbar navbar-expand-md bg-primary navbar-dark d-flex-none">
                            <button class="btn btn-link text-white pl-0" type="button" data-toggle="sidebar">
                              <i class="material-icons align-middle md-36">short_text</i>
                            </button>
                            <div class="page-title m-0">Dashboard</div>

                            <div class="collapse navbar-collapse" id="mainNavbar">
                                <ul class="navbar-nav ml-auto align-items-center">

                                    <li class="nav-item nav-divider">
                                        <li class="nav-item">
                                            <a href="#" class="nav-link dropdown-toggle dropdown-clear-caret" data-toggle="sidebar" data-target="#user-drawer">
                                              <%= user.name %>
                                              <img src="https://pbs.twimg.com/profile_images/928893978266697728/3enwe0fO_400x400.jpg" class="img-fluid rounded-circle ml-1" width="35"
                                                alt="">
                                            </a>
                                        </li>
                                    </li>
                                </ul>
                            </div>
                        </nav>
                    </div>
                </div>


            <!-- header-layout -->
            <div class="mdk-header-layout__content mdk-header-layout__content--scrollable h-100">

                

               
    <div class="container-fluid">
      <%- messages('messages', locals) %>
      <% if(errors) { %>
        <% errors.forEach(function(error){ %>
        <div class="alert alert-danger">
          <%= error.msg %>
        </div>
        <% }); %>
      <% } %>
      <h2>Edit Order</h2>
      <div class="card">
          <div class="card-body">
            <p>Order Id: # <%= order._id %></p>
            <p>Customer Id: # <%= order.user._id %> </p>
            <p>Customer Name: <%= order.user.name %> </p>
            <p>Customer Email: <%= order.user.email %> </p>
            <p>Total Price: <%= order.totalPrice %> </p>

            
            <h4>Order Items</h3>
            <ul>
            <% order.orderItems.forEach(function(p){ %>
              <li>
                <p>Product Name: <%= p.name %></p>
                <p>Product Price: <%= p.price %></p>
                <p>Quantity: <%= p.quantity %></p>
              </li>
            <% }); %>
            </ul>
            <h4>Shipping Info</h3>
              <p>Address: <%= order.shippingInfo.address %></p>
              <p>City: <%= order.shippingInfo.city %></p>
              <p>Postal Code: <%= order.shippingInfo.postalCode %></p>
              <p>Phone Number: <%= order.shippingInfo.phoneNo %></p>
              <p>Country: <%= order.shippingInfo.country %></p>

          </div>
      </div>
    </div>
   </div>


        </div>
        <!-- // END drawer-layout__content -->

        <!-- sidebar -->
        <% include ../_layouts/admin_sidebar %>
        <!-- // END sidebar -->

        <!-- drawer -->
       <% include ../_layouts/admin_right_drawer %>
        <!-- // END drawer -->

    </div>
    <!-- // END drawer-layout -->
<% include ../_layouts/admin_footer %>